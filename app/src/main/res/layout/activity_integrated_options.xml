<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:layout_gravity="center"
    android:background="@drawable/upwave"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <EditText
        android:id="@+id/account_no_fill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        app:cornerRadius="20dp" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dialogBox"
        android:layout_marginTop="220dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/wholewhite">


        <Button
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:id="@+id/bankpass"
            android:layout_marginStart="45dp"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/purple"
            android:drawableTop="@drawable/baseline_library_books_24"
            android:padding="20dp"
            android:text="PASSBOOK"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            app:cornerRadius="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/dialogBox"
            />

        <Button
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:id="@+id/bankstate"
            android:layout_marginStart="200dp"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/purple"
            android:drawableTop="@drawable/baseline_diamond_24"
            android:padding="20dp"
            android:text="STATUS"
            android:textColor="@color/white"
            android:textSize="22dp"
            android:textStyle="bold"
            app:cornerRadius="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="@id/bankpass"
            app:layout_constraintBottom_toBottomOf="@id/dialogBox"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dialogBox2"
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/wholewhite">


        <Button
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:id="@+id/online_pay"
            android:layout_marginStart="45dp"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/purple"
            android:drawableTop="@drawable/baseline_network_check_24"
            android:padding="20dp"
            android:text="ONLINE PAYMENT"
            android:textColor="@color/white"
            android:textSize="22dp"
            android:textStyle="bold"
            app:cornerRadius="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/dialogBox2"
            />

        <Button
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:id="@+id/Closing"
            android:layout_marginStart="200dp"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/purple"
            android:drawableTop="@drawable/baseline_close_24"
            android:padding="20dp"
            android:text="CLOSING"
            android:textColor="@color/white"
            android:textSize="22dp"
            android:textStyle="bold"
            app:cornerRadius="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="@id/online_pay"
            app:layout_constraintBottom_toBottomOf="@id/dialogBox2"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>



