<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@drawable/upwave"
    tools:context=".Online_payment">

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Online Transactions"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="50sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="50dp"
        android:layout_marginHorizontal="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp">




            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/destination"
                android:background="@drawable/custom_edittext"
                android:drawableLeft="@drawable/destination"
                android:drawablePadding="10dp"
                android:hint="Destination Account Number"
                android:textColorHint="@color/purple"
                android:padding="10dp"
                android:textColor="@color/purple"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="40dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/amount_upi"
                android:background="@drawable/custom_edittext"
                android:drawablePadding="10dp"
                android:hint="Please Enter Amount"
                android:textColorHint="@color/purple"
                android:padding="10dp"
                android:textColor="@color/purple"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="40dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/upi_pass"
                android:background="@drawable/custom_edittext"
                android:drawablePadding="10dp"
                android:hint="Please Enter ATM PIN"
                android:textColorHint="@color/purple"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColor="@color/purple"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="40dp"/>

            <Button
                android:id="@+id/send_button"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/purple"
                android:text="Send"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:cornerRadius="20dp" />

            <!--<Button
                android:id="@+id/signupbutton"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/purple"
                android:text="Sign Up"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:cornerRadius="20dp" />-->



            <!--<Button
                android:id="@+id/forgetbutton"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/purple"
                android:text="Forget Password"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:cornerRadius="20dp" />-->

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>